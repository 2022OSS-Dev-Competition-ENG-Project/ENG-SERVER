<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.engproject.mapper.UserMapper">
    <insert id="SignupUser" parameterType="com.example.engproject.dto.UserDto">
        INSERT INTO user (user_email,
                          user_password,
                          user_name,
                          user_nickname,
                          user_phone_number,
                          user_birth
        values (
                   #{UserEmail},
                   #{UserPassword},
                   #{UserName},
                   #{UserNickname},
                   #{UserPhoneNum},
                   #{UserBirth}
               )
    </insert>

    <update id="conform">
        update user
        set login_key = 1
        where user_email = #{UserEmail}
    </update>

    <select id="findEmail" resultType="com.example.engproject.dto.UserDto">
        select *
        from user
        where user_email = #{UserEmail}
    </select>
</mapper>